# =============================================================================
# MESSAGE SERVICE - Development Environment
# =============================================================================

# Application
MIX_ENV=dev
PORT=4006
PHX_HOST=localhost
PHX_SERVER=true

# Security
SECRET_KEY_BASE=dev_secret_key_base_min_64_chars_long_for_phoenix_app_1234567890abcdef
JWT_SECRET=dev_jwt_secret_change_in_production

# MongoDB
MONGODB_URL=mongodb://admin:admin_secret@localhost:27017/message_db?authSource=admin

# Redis
REDIS_URL=redis://:redis_secret@localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# Auth Service
AUTH_SERVICE_URL=http://localhost:8081

# Message Configuration
MAX_MESSAGE_LENGTH=10000
MESSAGE_RETENTION_DAYS=365
MESSAGE_EDIT_WINDOW_MINUTES=15

# File Attachments
MAX_ATTACHMENT_SIZE_MB=25
MAX_ATTACHMENTS_PER_MESSAGE=10
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=message-attachments
MINIO_USE_SSL=false

# Erlang Distribution
RELEASE_COOKIE=quckapp_dev_cookie
NODE_NAME=message@localhost

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=debug

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_ATTACHMENTS=true
