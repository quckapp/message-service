# =============================================================================
# MESSAGE SERVICE - Environment Configuration Example
# =============================================================================
# Copy this file to .env and update with your values

# Application
MIX_ENV=dev
PORT=4006
PHX_HOST=localhost
PHX_SERVER=true

# Security
SECRET_KEY_BASE=your_secret_key_base_min_64_chars
JWT_SECRET=your_jwt_secret

# MongoDB
MONGODB_URL=mongodb://user:password@localhost:27017/message_db?authSource=admin

# Redis
REDIS_URL=redis://:password@localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# Auth Service
AUTH_SERVICE_URL=http://localhost:8081

# Message Configuration
MAX_MESSAGE_LENGTH=10000
MESSAGE_RETENTION_DAYS=365

# File Attachments
MAX_ATTACHMENT_SIZE_MB=25
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=message-attachments

# Erlang Distribution
RELEASE_COOKIE=your_erlang_cookie

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/v1/traces
LOG_LEVEL=debug
